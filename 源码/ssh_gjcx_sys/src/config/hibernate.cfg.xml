<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>
<session-factory>
	<!-- 自动提交 -->
	<property name="connection.autocommit">true</property>
	<!-- 连接池  -->
	<property name="hibernate.proxool.pool_alias">DBPool</property>
	<property name="hibernate.proxool.xml">proxool.xml</property>

	<property name="connection.provider_class">
		org.hibernate.connection.ProxoolConnectionProvider
	</property>
	<!--使用的MySQL对应的"方言"，此处是MySQL的"方言"-->
	<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

	<!--程序执行的时候是否显示真正的sql语句-->
	<property name="show_sql">true</property>
	<mapping resource="com/model/TbGg.hbm.xml" />
	<mapping resource="com/model/TbManager.hbm.xml" />
	<mapping resource="com/model/TbMember.hbm.xml" />
	<mapping resource="com/model/TbMessage.hbm.xml" />
	<mapping resource="com/model/TbLine.hbm.xml" />
	<mapping resource="com/model/TbDetail.hbm.xml" />
	<mapping resource="com/model/TbForum.hbm.xml" />
	<mapping resource="com/model/TbPic.hbm.xml" />
	<mapping resource="com/model/TbLoad.hbm.xml" />

</session-factory>
</hibernate-configuration>